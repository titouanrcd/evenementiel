# ============================================
# .gitignore - NOVA Événements
# ============================================

# ============================================
# Fichiers de configuration sensibles
# ============================================
.env
.env.*
config.local.php
*.local.php

# ============================================
# Logs
# ============================================
logs/*.log
logs/*.txt
*.log
error.log

# ============================================
# IDE et éditeurs
# ============================================
.idea/
.vscode/
*.swp
*.swo
*~
.project
.settings/
*.sublime-*

# ============================================
# Système d'exploitation
# ============================================
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# ============================================
# Dépendances
# ============================================
/vendor/
/node_modules/
composer.phar

# ============================================
# Cache
# ============================================
cache/
*.cache
.php_cs.cache
.phpunit.result.cache

# ============================================
# Tests
# ============================================
/coverage/
.phpunit.result.cache
phpunit.xml

# ============================================
# Build
# ============================================
/build/
/dist/

# ============================================
# Fichiers temporaires
# ============================================
*.tmp
*.temp
*.bak
*.backup

# ============================================
# Documentation générée
# ============================================
/docs/api/

# ============================================
# Uploads (optionnel - décommenter si nécessaire)
# ============================================
# uploads/*
# !uploads/.htaccess
# !uploads/.gitkeep
