# ============================================================
# FICHIER .HTACCESS - SÉCURITÉ & PERFORMANCE (AMÉLIORÉ)
# ============================================================
# Ce fichier configure la sécurité et la performance au niveau
# du serveur Apache. À placer à la racine du projet.
# ============================================================

# Activer le moteur de réécriture
RewriteEngine On

# ============================================================
# 1. HEADERS DE SÉCURITÉ
# ============================================================
<IfModule mod_headers.c>
    # Protection contre le clickjacking
    Header always set X-Frame-Options "DENY"
    
    # Empêcher le sniffing MIME
    Header always set X-Content-Type-Options "nosniff"
    
    # Politique de référent
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Politique de Sécurité du Contenu (CSP) - HAUTEMENT RECOMMANDÉ
    # **À AJUSTER** : default-src 'self' ne permet que les ressources de votre domaine.
    # Si vous utilisez des CDN ou Google Fonts, vous devez ajouter leur domaine ici.
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' https://trusted-cdn.com; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
    
    # Politique d'autorisation (Permissions-Policy)
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

    # Suppression des informations sur le serveur (bon pour l'obfuscation)
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# ============================================================
# 2. PROTECTION DES FICHIERS SENSIBLES
# ============================================================

# Bloquer l'accès aux fichiers de configuration
<FilesMatch "^(db\.php|security\.php|\.env|\.htaccess|\.htpasswd)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquer l'accès aux fichiers SQL
<FilesMatch "\.sql$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz-core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquer l'accès aux fichiers de logs
<FilesMatch "\.log$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# ============================================================
# 3. PROTECTION CONTRE L'ÉNUMÉRATION DES RÉPERTOIRES
# ============================================================
Options -Indexes

# ============================================================
# 4. CONFIGURATION PHP (si mod_php)
# ============================================================
<IfModule mod_php.c>
    # Désactiver l'affichage des erreurs PHP en production (IMPORTANT)
    php_flag display_errors Off
    php_flag display_startup_errors Off
    
    # Maintenir le logging des erreurs actif (pour le débogage serveur)
    php_flag log_errors On
    
    # Assurer que toutes les erreurs sont enregistrées dans le log.
    # ATTENTION : Ne jamais mettre à 0 en production, il faut logguer !
    php_value error_reporting E_ALL & ~E_NOTICE & ~E_DEPRECATED
    
    # Configuration des sessions sécurisées
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.use_strict_mode 1
    php_value session.cookie_samesite Strict
    
    # Limiter les uploads
    php_value upload_max_filesize 5M
    php_value post_max_size 6M
    
    # Désactiver les fonctions dangereuses
    php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"
</IfModule>

# ============================================================
# 5. COMPRESSION GZIP (performance)
# ============================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ============================================================
# 6. CACHE DES ASSETS STATIQUES
# ============================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>