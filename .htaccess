# ============================================================
# FICHIER .HTACCESS - SÉCURITÉ & PERFORMANCE (AMÉLIORÉ)
# ============================================================
# Ce fichier configure la sécurité et la performance au niveau
# du serveur Apache. À placer à la racine du projet.
# ============================================================

# Activer le moteur de réécriture
RewriteEngine On

# ============================================================
# 1. HEADERS DE SÉCURITÉ
# ============================================================
<IfModule mod_headers.c>
    # Protection contre le clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Empêcher le sniffing MIME
    Header always set X-Content-Type-Options "nosniff"
    
    # Politique de référent
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CSP - Autorise Google Maps, Fonts, et images externes
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com https://maps.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; frame-src https://www.google.com https://maps.google.com; connect-src 'self' https://maps.googleapis.com;"
    
    # Politique d'autorisation - Autorise la géolocalisation pour Google Maps
    Header always set Permissions-Policy "geolocation=(self), microphone=(), camera=()"

    # Suppression des informations sur le serveur
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# ============================================================
# 2. PROTECTION DES FICHIERS SENSIBLES
# ============================================================

# Bloquer l'accès aux fichiers de configuration
<FilesMatch "^(db\.php|security\.php|\.env|\.htaccess|\.htpasswd)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquer l'accès aux fichiers SQL
<FilesMatch "\.sql$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquer l'accès aux fichiers de logs
<FilesMatch "\.log$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# ============================================================
# 3. PROTECTION CONTRE L'ÉNUMÉRATION DES RÉPERTOIRES
# ============================================================
Options -Indexes

# ============================================================
# 4. CONFIGURATION PHP (si mod_php)
# ============================================================
<IfModule mod_php.c>
    # Désactiver l'affichage des erreurs PHP en production (IMPORTANT)
    php_flag display_errors Off
    php_flag display_startup_errors Off
    
    # Maintenir le logging des erreurs actif (pour le débogage serveur)
    php_flag log_errors On
    
    # Configuration des sessions sécurisées
    php_value session.cookie_httponly 1
    php_value session.use_strict_mode 1
    php_value session.cookie_samesite Strict
    
    # Limiter les uploads
    php_value upload_max_filesize 5M
    php_value post_max_size 6M
</IfModule>

# ============================================================
# 5. COMPRESSION GZIP (performance)
# ============================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ============================================================
# 6. CACHE DES ASSETS STATIQUES
# ============================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>